<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="krl-morph" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="krl.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="krl-gener" install="yes">
    <pipeline>
      <program name="lt-proc -g">
        <file name="krl.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="krl-tagger" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="krl.automorf.bin"/>
      </program>
      <program name="cg-proc -w">
        <file name="krl.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="krl-disam" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="krl.automorf.bin"/>
      </program>
      <program name="cg-conv -a -l" />
      <program name="vislcg3 --trace -g">
        <file name="apertium-krl.krl.rlx"/>
      </program>
    </pipeline>
  </mode>

</modes>

